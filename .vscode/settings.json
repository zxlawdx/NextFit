{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Run JavaFX",
      "request": "launch",
      "mainClass": "Main",
      "vmArgs": "--module-path /opt/javafx/javafx-sdk-21.0.2/lib --add-modules javafx.controls,javafx.fxml"
    }
  ],

  "java.project.sourcePaths": [
    "src"
  ],
  "java.project.outputPath": "bin",
  "java.project.referencedLibraries": [
    "/opt/javafx/javafx-sdk-21.0.2/lib/*.jar"
  ],
  "files.autoSave": "afterDelay",
  "java.configuration.updateBuildConfiguration": "interactive"

}
