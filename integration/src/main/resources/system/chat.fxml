<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="system.Chat" stylesheets="@chat.css">

    <!-- Topo com título -->
    <top>
        <Label text="Chat NextFit" styleClass="chat-title" BorderPane.alignment="CENTER"/>
    </top>

    <!-- Área principal com mensagens -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
            <content>
                <VBox fx:id="vboxMensagens" spacing="10" styleClass="mensagens-container">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Parte inferior com a resposta e a entrada -->
    <bottom>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            
            <!-- Área de resposta fixa -->
            <TextArea fx:id="txtResposta"
                      editable="false"
                      wrapText="true"
                      prefHeight="300.0"
                      promptText="Resposta da IA aparecerá aqui..."
                      styleClass="resposta-area" />
            
            <!-- Área de entrada -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-area">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <TextArea fx:id="txtPergunta"
                          promptText="Digite sua mensagem..."
                          wrapText="true"
                          prefRowCount="2"
                          styleClass="input-text"/>
                <Button text="Enviar" onAction="#onEnviarClick" styleClass="botao-enviar"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
