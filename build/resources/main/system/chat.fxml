<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
    <?import javafx.scene.control.*?>
    <?import javafx.geometry.Insets?>
    
    <BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="system.Chat" stylesheets="@chat.css">
    
        <!-- Topo com título -->
        <top>
            <Label text="Chat NextFit" styleClass="chat-title" BorderPane.alignment="CENTER"/>
        </top>
    
        <!-- Área principal com mensagens -->
        <center>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <VBox fx:id="vboxMensagens" spacing="10" styleClass="mensagens-container" />
            </ScrollPane>
        </center>
    
        <bottom>
            <VBox spacing="5" BorderPane.alignment="CENTER">
                <!-- Área de resposta fixa -->
                <Label fx:id="txtResposta" text="Resposta do sistema aparecerá aqui..." 
                       wrapText="true" styleClass="resposta-sistema"/>
                
                <!-- Área de entrada -->
                <HBox spacing="10" styleClass="input-area" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <TextArea fx:id="txtPergunta" promptText="Digite sua mensagem..." wrapText="true" prefRowCount="2" styleClass="input-text"/>
                    <Button text="Enviar" onAction="#onEnviarClick" styleClass="botao-enviar"/>
                </HBox>
            </VBox>
        </bottom>
        
    
    </BorderPane>
    